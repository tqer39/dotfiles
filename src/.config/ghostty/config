# Ghostty configuration
# https://ghostty.org/docs/config

# Theme
theme = tokyonight

# Custom palette overrides (improve readability)
palette = 8=#8a92b5

# Font
font-family = "BIZ UDGothic Bold"
font-size = 17
font-thicken = true

# Background
background-opacity = 0.8
background-blur = 20

# Cursor
cursor-opacity = 0.7

# Split pane
unfocused-split-opacity = 0.7

# Window
window-save-state = always
window-padding-x = 2
window-padding-y = 2
window-padding-balance = true

# macOS
macos-titlebar-style = tabs

# Keybindings
# fzf 履歴検索 (cmd+r → ctrl+r)
keybind = super+r=text:\x12
# 画面分割 (左右)
keybind = super+left_bracket=new_split:right
