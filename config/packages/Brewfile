# ------------------------------------------------------------------------------
# Brewfile - Homebrew packages for macOS and Linux
# ------------------------------------------------------------------------------
# Usage: brew bundle --file=Brewfile
# ------------------------------------------------------------------------------

# ------------------------------------------------------------------------------
# CLI Tools
# ------------------------------------------------------------------------------

# Shell and prompt
brew "zsh"
brew "starship"

# Git
brew "git"
brew "gh"

# Modern CLI replacements
brew "eza"          # ls replacement
brew "bat"          # cat replacement
brew "fzf"          # fuzzy finder
brew "ripgrep"      # grep replacement

# Development tools
brew "direnv"
brew "shellcheck"
brew "pre-commit"

# Utilities
brew "curl"
brew "wget"
brew "jq"
brew "tree"
brew "gnupg"
brew "xsel" if OS.linux?  # clipboard support for Linux

# ------------------------------------------------------------------------------
# macOS Only - Casks
# ------------------------------------------------------------------------------
if OS.mac?
  # Fonts
  cask "font-hackgen-nerd"

  # Terminal
  cask "ghostty"

  # Development
  cask "visual-studio-code"

  # Productivity
  cask "1password"
  cask "raycast"

  # Keyboard & Window Management
  cask "karabiner-elements"
  cask "hammerspoon"

  # Media
  cask "vlc"

  # Other
  cask "rancher"
end

# ------------------------------------------------------------------------------
# Personal packages (skipped with --work flag)
# ------------------------------------------------------------------------------
if OS.mac? && ENV['WORK_MODE'] != 'true'
  cask "orbstack"  # Docker/VM alternative
end

